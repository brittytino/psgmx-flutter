rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isCoordinator() {
      return getUserData().roles.coordinator == true;
    }

    function isRep() {
      return getUserData().roles.placement_rep == true;
    }

    function isLeader() {
      return getUserData().roles.team_leader == true;
    }

    // --- TIME LOCK ENFORCEMENT (FREE TIER SOLUTION) ---
    // Check if current time is BEFORE 8:00 PM (20:00)
    function isBeforeLockTime() {
      return request.time.hours() < 20;
    }

    // --- Collections ---

    // USERS: Read-only for self/hierarchy
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // WHITELIST: Used for bootstrapping
    match /whitelist/{email} {
      allow read: if request.auth.token.email == email;
      allow write: if false;
    }

    // TEAMS: Static mapping
    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // DAILY TASKS: Coord writes, everyone reads
    match /daily_tasks/{date} {
      allow read: if request.auth != null;
      allow write: if isCoordinator();
    }

    // ATTENDANCE SUBMISSIONS: Team leaders write BEFORE 8 PM
    match /attendance_submissions/{submissionId} {
      allow read: if request.auth != null;
      
      // Leaders can create submission ONLY before 8 PM
      allow create: if isLeader() 
                    && isBeforeLockTime()
                    && request.resource.data.teamId == getUserData().teamId;
      
      // Rep can override anytime (for corrections)
      allow update: if isRep();
      
      allow delete: if false;
    }

    // ATTENDANCE RECORDS: Individual student records
    match /attendance_records/{recordId} {
      allow read: if request.auth != null;
      
      // Leaders create records BEFORE 8 PM
      allow create: if isLeader() && isBeforeLockTime();
      
      // Rep can create/update anytime (manual corrections)
      allow create, update: if isRep();
      
      allow delete: if false;
    }

    // AUDIT LOGS: Rep writes, coordinators read
    match /audit_logs/{logId} {
      allow read: if isCoordinator() || isRep();
      allow create: if isRep();
      allow update, delete: if false;
    }
  }
}